@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h2>@ViewData["Title"]</h2>*@
<style>
    /*.validation-summary-errors {
        display: none !important;
    }*/

    .logo_text {
        font-size: 15px;
        color: green;
        font-family: cursive;
    }

    .logo {
        margin: 10px 25%;
    }
    #cookieConsent{
        display:none !important;
    }
</style>
<div class="container-fluid " style="padding:0px !important;">
    <div class="bg_1 m_bg">
        <div class="container">
            <div class="row" style="padding-top:7%;padding-bottom:7%;">
                <div class="col-md-4 bg_style">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div style="text-align:center;padding-bottom:10px;">
                            @*<a href="#" class="logo">*@
                            <img src="~/img/NewIcon1.png" style="height:60px" />
                            @*<span class="logo_text">Compass Tutor</span>*@
                            @*</a>*@
                        </div>
                        @*<h4 style="text-align:center;">Create a new account</h4>*@
                        <hr style="margin-top:0px;" />

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div style="text-align:center;display:block;">
                            <input asp-for="Input.Role" type="radio" value="Student" checked />&nbsp; <label style="vertical-align:middle;" for="m">Student</label>&nbsp;&nbsp;&nbsp;
                            <input asp-for="Input.Role" type="radio" value="Tutor" />&nbsp; <label style="vertical-align:middle;" for="m">Tutor</label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="text-align:center;">
                            <button type="submit" class="btn btn-warning">Register</button>
                        </div>
                        <p style="text-align:center;">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">LogIn</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
