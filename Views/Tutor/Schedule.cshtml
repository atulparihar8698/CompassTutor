<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog mble_width_popup" style="width:27%;">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Book Slot</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <input type="hidden" id="slotid" readonly class="form-control input-md">
                    <label for="email">Date: <span id="date"></span></label>

                    <label style="padding-left:20px; " for="name">Time: <span id="time"></span></label>
                </div>

                <div class="col-md-12" style="padding-top:20px;">
                    <div class="form-group form-focus select-focus">
                        <label class="control-label">Subject</label>
                        <select class="select form-control floating" id="subject" value="" style="width:100%">
                            <option value="">Select</option>
                        </select>
                    </div>
                    <div class="form-group form-focus select-focus" style="margin-bottom:0px;">
                        <label class="control-label">Topic</label>
                        <select class="select form-control floating" id="subjecttype" value="" style="width:100%">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                @*<div class="form-inline"><label>Subject:</label>&nbsp;&nbsp; <input type="text" id="selecttest" class="form-control" style="width: 69%;padding: 5px;height: 27px;border-radius: 5px;" /></div>*@
                <input type="hidden" id="update" />
                <div class="form-inline col-md-12">
                    <label style="display:block;">Notes:</label>
                    <textarea rows="5" id="message" style="width:100%;margin-top:5px;padding:4px;"></textarea>
                </div>


                <button type="button" id="btnSubmit" style="width:50%;margin:5px 27%;" class="btn btn-primary" data-loading-text="Sending info.."><em class="icon-ok"></em>Book Slot</button>
                <button type="button" id="btnCancel" style="width:50%;margin:5px 27%;" class="btn btn-primary" data-loading-text="Sending info.."><em class="icon-ok"></em>Cancel Slot</button>

            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>*@
        </div>

    </div>
</div>


